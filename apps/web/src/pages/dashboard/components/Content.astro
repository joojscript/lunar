---
import { AddComponent } from "./AddComponent";
import { Graph } from "./Graph";
import { Header } from "./Header";
import { HostsSection } from "./HostsSection";
import { Score } from "./Score";
import { Segmentation } from "./Segmentation";
import { TopServicesExposed } from "./TopServicesExposed";
---

<div class="flex w-full">
  <div
    class="h-screen flex-grow overflow-x-hidden overflow-auto flex flex-wrap content-start p-2"
  >
    <Header client:only />
    <div class="w-full grid sm:grid-cols-3 grid-rows-1 gap-0">
      <HostsSection client:only />

      <div class="w-full p-2 sm:col-span-2">
        <div class="rounded-lg bg-card sm:h-80 h-60">
          <Graph client:idle />
        </div>
      </div>
      <div class="w-full h-full p-2">
        <div class="rounded-lg bg-card h-80">
          <TopServicesExposed client:only />
        </div>
      </div>

      <div class="w-full h-full p-2">
        <div class="rounded-lg bg-card h-80">
          <Segmentation client:load />
        </div>
      </div>
      <div class="w-full h-full p-2">
        <div class="rounded-lg bg-card h-80">
          <Score client:only />
        </div>
      </div>
      <div class="w-full h-full p-2">
        <div class="rounded-lg bg-card overflow-hidden h-80">
          <AddComponent client:load />
        </div>
      </div>
    </div>
  </div>
</div>
